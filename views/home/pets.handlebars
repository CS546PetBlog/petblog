<div>
    <h1>All Pet Posts: </h1>
    <h2>Perform Search</h2>
    <form action="/pets" method="POST">
        <label for="name">Animal Name</label>
        <input type="text" name="name"/>

        <label for="type">Animal Type</label>
        <input type="text" name="type"/>

        <label for="age">Animal Age</label>
        <input type="text" name="age"/>

        <label for="zip">Zipcode</label>
        <input type="text" name="zip"/>

        <label for="tag">Tag</label>
        <input type="text" name="tag"/>

        <button type="submit">Search</button>

        <a href="/pets">Clear Filter</a>
    </form>
    <a href="/pets/create">Create a new post</a>
    <table class="table-responsive">
        <thead>
            <th>User</th>
            <th>AnimalName</th>
            <th>AnimalType</th>
            <th>AnimalAge</th>
            <th>Zipcode</th>
            <th>Description</th>
            <th>Tag</th>
            <th>Image</th>
        </thead>
        <tbody>
            {{#each pets}}
            <tr>
                <td>{{this.username}}</td>
                <td>{{this.animalName}}</td>
                <td>{{this.animalType}}</td>
                <td>{{this.animalAge}}</td>
                <td>{{this.zipcode}}</td>
                <td>{{this.description}}</td>
                <td>{{this.tag}}</td>
                <td>
                    <a href={{this.link}}>View Post</a>
                </td>
                <td><img src={{this.image}} /></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>