<div>
    <a href="/posts/create">Create a new post</a>
    <table class="table table-responsive">
        <thead>
            <th>User</th>
            <th>Pet</th>
            <th>Status</th>
            <th>Comments</th>
            <th>Pictures</th>
            <th>date</th>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{this.username}}</td>
                <td><img src={{this.image}} /></td>
                <td>{{this.title}}</td>
                <td>{{this.tag}}</td>
                <td>{{this.body}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>